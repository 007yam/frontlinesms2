<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>net.frontlinesms2</groupId>
	<artifactId>systray-monitor</artifactId>
	<name>FrontlineSMS2 SystemTray Monitor</name>
	<version>0.1-SNAPSHOT</version>
	<description>System tray monitor for FrontlineSMS2.</description>
  
	<properties>
		<!-- Force Maven to use UTF-8 encoding when copying resources, rather than using the 
			platform default. -->
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<jetty.version>8.0.4.v20111024</jetty.version>
		<install4j.osx.installDir>${install4j.app.shortName}</install4j.osx.installDir>
		<install4j.windows.installDir>${install4j.app.shortName}</install4j.windows.installDir>
		<install4j.unix.installDir>${install4j.app.shortName}</install4j.unix.installDir>
		<frontlinesms.flavour.propertiesfile>../../${frontlinesms.flavour}/install/${frontlinesms.flavour}.install.properties</frontlinesms.flavour.propertiesfile>
		<frontlinesms.flavour.bundle.fileset>../../${frontlinesms.flavour}/install/fileset</frontlinesms.flavour.bundle.fileset>
		<resources.root.path>src/main/resources</resources.root.path>
	</properties>

	<repositories>
		<repository>
			<id>frontlinesms.repo</id>
			<name>FrontlineSMS Maven repository</name>
			<url>http://dev.frontlinesms.com/m2repo</url>
		</repository>
	</repositories>

	<pluginRepositories>
		<pluginRepository>
			<id>googlecode-maven-install4j</id>
			<name>googlecode-maven-install4j</name>
			<url>http://maven-install4j.googlecode.com/svn/m2-repo</url>
		</pluginRepository>
	</pluginRepositories>

	<build>
		<resources>
			<resource>
				<directory>${resources.root.path}</directory>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptors>
						<!-- common build for install4j -->
						<descriptor>src/assemble/install4j.xml</descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.google.code.maven-install4j</groupId>
				<artifactId>maven-install4j-plugin</artifactId>
				<version>0.1.1</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>compile</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<executable>${devenv.install4jc}</executable>
					<configFile>${basedir}/build.install4j</configFile>
					<releaseId>${install4j.releaseId}</releaseId>
					<attach>true</attach>
					<skipOnMissingExecutable>true</skipOnMissingExecutable>
					<compilerVariables>
						<property>
							<name>assembly.dir</name>
							<value>target/${project.artifactId}-${project.version}-windows-install4j</value>
						</property>
						<property><name>build.name</name><value>${install4j.build.name}</value></property>
						<property><name>app.shortName</name><value>${install4j.app.shortName}</value></property>
						<property><name>install4j.applicationId</name><value>${install4j.applicationId}</value></property>
						<property><name>exe.name</name><value>${install4j.exe.name}</value></property>
						<property><name>exe.ico</name><value>${install4j.exe.ico}</value></property>
						<property><name>exe.icns</name><value>${install4j.exe.icns}</value></property>
						<property><name>installer.ico</name><value>${install4j.installer.ico}</value></property>
						<property><name>installer.icns</name><value>${install4j.installer.icns}</value></property>
						<property><name>osx.installDir</name><value>${install4j.osx.installDir}</value></property>
						<property><name>windows.installDir</name><value>${install4j.windows.installDir}</value></property>
						<property><name>unix.installDir</name><value>${install4j.unix.installDir}</value></property>
						<property><name>splash.image</name><value>${install4j.splash.image}</value></property>
						<property><name>installer.icons.path</name><value>${install4j.installer.icons.path}</value></property>
					</compilerVariables>
					<verbose>true</verbose>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.2.1</version>
				<configuration>
					<executable>java</executable>
					<arguments>
						<argument>-classpath</argument>
						<classpath/>
						<argument>net.frontlinesms2.systraymonitor.Main</argument>
					</arguments>
					<workingDirectory>${basedir}</workingDirectory>
					<mainClass>net.frontlinesms2.systraymonitor.Main</mainClass>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.1</version>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<argLine>-enableassertions</argLine>
					<forkMode>always</forkMode>
				</configuration>
			</plugin>
			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.2</version>
			</plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>properties-maven-plugin</artifactId>
        <version>1.0-alpha-2</version>
        <executions>
          <execution>
            <phase>initialize</phase>
            <goals>
              <goal>read-project-properties</goal>
            </goals>
            <configuration>
              <files>
                <file>${frontlinesms.flavour.propertiesfile}</file>
              </files>
            </configuration>
          </execution>
        </executions>
      </plugin>
		</plugins>
		
		<extensions>
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-ftp</artifactId>
				<version>1.0-beta-6</version>
			</extension>
		</extensions>
	</build>

	<reporting>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>findbugs-maven-plugin</artifactId>
				<version>2.3</version>
				<configuration>
					<xmlOutput>true</xmlOutput>
					<findbugsXmlOutput>true</findbugsXmlOutput>
					<findbugsXmlWithMessages>true</findbugsXmlWithMessages>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>cobertura-maven-plugin</artifactId>
				<version>2.4</version>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-pmd-plugin</artifactId>
				<version>2.5</version>
				<configuration>
					<targetJdk>1.5</targetJdk>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jxr-plugin</artifactId>
				<version>2.2</version>
			</plugin> 
		</plugins>
	</reporting>

	<dependencies>
		<dependency>
			<groupId>org.eclipse.jetty.aggregate</groupId>
			<artifactId>jetty-webapp</artifactId>
			<version>${jetty.version}</version>
		</dependency>
		<dependency>
			<groupId>com.install4j</groupId>
			<artifactId>i4jruntime</artifactId>
			<version>5</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>
</project>
